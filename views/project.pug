extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1=projects[id-1].project_name
        p.lead.text-light
          | #{projects[id-1].description}
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each technology in projects[id-1].technologies
            li=technology
        //- Link to live and github
        a.button.expanded(href=`${projects[id-1].live_link}`) Live Demo
        a.button.expanded(href=`${projects[id-1].github_link}`) GitHub Repo
    //- Images
    img.image(src=`${projects[id-1].image_urls[1]}`)
    img.image(src=`${projects[id-1].image_urls[2]}`)
    img.image(src=`${projects[id-1].image_urls[3]}`)



